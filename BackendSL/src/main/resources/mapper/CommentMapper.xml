<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.muqi.backendsl.mapper.CommentMapper">

    <resultMap id="BaseResultMap" type="com.muqi.backendsl.entity.Comment">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="userID" column="userID" jdbcType="INTEGER"/>
            <result property="parentID" column="parentID" jdbcType="INTEGER"/>
            <result property="isDelete" column="isDelete" jdbcType="TINYINT"/>
            <result property="content" column="content" jdbcType="VARCHAR"/>
            <result property="createTime" column="createTime" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="updateTime" jdbcType="TIMESTAMP"/>
            <result property="isReview" column="isReview" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,userID,parentID,
        isDelete,content,createTime,
        updateTime,isReview
    </sql>
    <select id="selectCommentByArticleID" resultType="com.muqi.backendsl.model.dto.CommentDTO">
        select * from t_comment
        where articleID = #{articleID};
    </select>
</mapper>
